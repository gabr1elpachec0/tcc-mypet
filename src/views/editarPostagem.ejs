<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('head') %>
</head>

<body>
    <%- include('menu') %>
        <div class="container text-center col-md-4 mt-5">
            <% post.forEach(function(post) { %>
                <form action="/post-update/<%= post['id'] %>" method="post" class="form p-5 shadow" enctype="multipart/form-data">
                    <h2 class="form-title-login fw-bold">Atualize sua publicação</h2>
                    <br>
                    <div class="form-group text-start">
                        <label for="foto">
                            Adicione uma foto
                        </label>
                        <input type="file" class="form-control" name="postPic" required>
                    </div>
                    <div class="form-group text-start">
                        <label for="">
                            Descrição
                        </label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="postDescription" placeholder="Digite aqui" rows="3" required><%= post['description'] %></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn text-light fw-bold shadow-lg" name="btn" value="ATUALIZAR"
                            style="background-color: #E26A29;">
                    </div>
                </form>
            <% }) %>
        </div>
</body>

</html>