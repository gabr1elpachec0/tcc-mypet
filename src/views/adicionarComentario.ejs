<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%- include('head') %>
  </head>

  <body>
    <%- include('menu') %>
    <div class="container text-center col-md-4 mt-5">
      <form
        action="/post-comment/<%= postId %>"
        method="post"
        class="form p-5 shadow"
        enctype="multipart/form-data"
      >
        <h2 class="form-title-login fw-bold">Adicione um comentário</h2>
        <br />
        <div class="mb-3 text-start">
          <label for="exampleFormControlTextarea1" class="form-label">
            Comentário
          </label>
          <textarea
            class="form-control"
            id="exampleFormControlTextarea1"
            name="comment"
            placeholder="Digite aqui"
            rows="3"
            required
          ></textarea>
        </div>
        <div class="form-group">
          <input
            type="submit"
            class="btn text-light fw-bold shadow-lg mt-3"
            name="btn"
            value="ENVIAR"
            style="background-color: #e26a29"
          />
        </div>
      </form>
    </div>
  </body>
</html>
