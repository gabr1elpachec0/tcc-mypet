<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <%- include('head') %>
  </head>
  <body>
    <%- include('menu') %>
    <div class="container mt-5 text-center">
        <h1 class="fw-bold">Conversas</h1>
        <table class="table">
            <thead>
                <tr>
                    <th scope="col" style="color: #eb762b">Descrição</th>
                </tr>
            </thead>
            <tbody>
                <% chats.forEach(chat=> { %>
                    <tr>
                        <td>
                            <span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-circle" style="margin: 10px;"
                                    viewBox="0 0 16 16">
                                    <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                    <path fill-rule="evenodd"
                                        d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                                </svg>
                            </span>
                            <a href="/chat/<%= chat.receivedMessageId %>" style="text-decoration: none; color: black; font-size: large;"> <%= chat.receivedMessage.name %> </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
  </body>
</html>
