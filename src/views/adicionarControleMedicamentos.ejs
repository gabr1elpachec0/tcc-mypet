<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('head') %>
</head>

<body>
    <%- include('menu') %>
        <div class="container col-md-4 mt-5">
            <% pet.forEach(function(pet) { %>
                <form action="/adicionarControleMedicamentos/<%= pet['id'] %>" method="post" class="shadow-lg p-5 rounded" enctype="multipart/form-data">
                    <h2 class="fw-bold text-center">Controle de medicamentos</h2>
                    <br>
                    <div class="form-group">
                        <label for="data">
                            Data
                        </label>
                        <input type="date" class="form-control" name="medicineDate" required>
                    </div>
                    <div class="form-group">
                        <label for="categoriaProduto">
                            Categoria
                        </label>
                        <select class="form-select form-control" name="medicineCategory" id="categoriaProduto" required>
                            <option value="">Nenhum</option>
                            <option value="Vermífugo">Vermífugo</option>
                            <option value="Ectoparasitas">Ectoparasitas (Pulga ou Carrapato)</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="nomeProduto">
                            Nome do produto
                        </label>
                        <input type="text" class="form-control" placeholder="Digite aqui" name="medicineName" required>
                    </div>
                    <div class="form-group">
                        <label for="dataRepetir">
                            Repetir em
                        </label>
                        <input type="date" class="form-control" name="medicineRepeat" required>
                    </div>
                    <div class="form-group text-center mt-5">
                        <input type="submit" class="btn text-light fw-bold shadow-lg" name="btn" value="CONFIRMAR"
                            style="background-color: #E26A29;">
                    </div>
                </form>
            <% }) %>
        </div>
</body>

</html>