<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('head') %>
</head>

<body>
    <%- include('menu') %>
</body>
<div class="container">
    <h3 class="mt-5 fw-bold text-center">Minhas doações</h3>
    <br>
    <% if (sucess_update_donation) { %>
        <div class='alert alert-success' style="height: 60px;">
            <p>
                <%= sucess_update_donation %>
            </p>
        </div>
    <% } %>
    <% if (sucess_delete_donation) { %>
        <div class='alert alert-success' style="height: 60px;">
            <p>
                <%= sucess_delete_donation %>
            </p>
        </div>
    <% } %>
    <div class="row mt-5">
        <% donations.forEach(function (donation) { %>
            <div class="col mb-5">
                <div class="card" style="width: 19rem;">
                    <img src="donationPics/<%= donation['petPic'] %>" class="card-img-top" alt="petPic">
                    <div class="card-body">
                        <h5 class="card-title fw-bold"><%= donation['petName'] %></h5>
                        <br>
                        <p class="card-text card-description"> 
                            <span class="fw-bold"> Descrição: </span> 
                            <%= donation['petDescription'] %>
                        </p>
                        <p class="card-text"> 
                            <span class="fw-bold"> Castrado:  </span>
                            <% if (donation['petSpayed'] === true) { %>
                                Sim
                            <% } else { %>
                                Não
                            <% } %>
                        </p>
                        <p class="card-text"> 
                            <span class="fw-bold"> Vacinado: </span> 
                            <% if (donation['petVaccinated'] === true) { %>
                                Sim
                            <% } else { %>
                                Não
                            <% } %>
                        </p>
                        <p class="card-text"> 
                            <span class="fw-bold"> Gênero: </span> 
                            <%= donation['petGender'] %>
                        </p>
                        <div class="d-flex">
                            <a href="/donation-update/<%= donation['id'] %>">
                                <div class="icon shadow">
                                    <img src="images/edit.png" alt="edit" style="height: 30px; width: 30px; margin: 12px;">
                                </div>
                            </a>
                            <a href="/donation-delete/<%= donation['id'] %>">
                                <div class="icon shadow mx-3">
                                    <img src="images/x.png" alt="delete" style="height: 30px; width: 30px; margin: 12px;">
                                </div>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
        
        
</div>    
</html>