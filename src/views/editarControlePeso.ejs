<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('head') %>
</head>

<body>
    <%- include('menu') %>
        <div class="container col-md-4 mt-5">
            <% weightControl.forEach(function(weightControl) { %>
                <form action="/weightControl-update/<%= weightControl['id'] %>" method="post" class="shadow-lg p-5 rounded" enctype="multipart/form-data">
                    <h2 class="fw-bold text-center">Controle de peso</h2>
                    <br>
                    <div class="form-group">
                        <label for="data">
                            Data
                        </label>
                        <input type="date" class="form-control" name="weightDate" value="<%= weightControl['weightDate'].toISOString().slice(0, 10) %>" required>
                    </div>
                    <div class="form-group">
                        <label for="peso">
                            Peso em gramas (g)
                        </label>
                        <input type="number" class="form-control" placeholder="Digite aqui" name="weight" value="<%= weightControl['weight'] %>" required>
                    </div>
                    <div class="form-group text-center mt-5">
                        <input type="submit" class="btn text-light fw-bold shadow-lg" name="btn" value="CONFIRMAR"
                            style="background-color: #E26A29;">
                    </div>
                </form>
            <% }) %>
        </div>
</body>
</html>