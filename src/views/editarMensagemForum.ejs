<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('head') %>
</head>

<body>
    <%- include('menu') %>
        <div class="container text-center col-md-4 mt-5">
            <% message.forEach(function(message) { %>
                <form action="/forumMessage-update/<%= message['id'] %>" method="post" class="form shadow p-5" enctype="multipart/form-data">
                    <h2 class="form-title-login fw-bold">Atualize sua mensagem no fórum</h2>
                    <br>
                    <div class="form-group text-start">
                        <label for="assunto">
                            Assunto
                        </label>
                        <input type="text" name="title" class="form-control" placeholder="Digite aqui" value="<%= message['title'] %>" required>
                    </div>
                    <div class="mb-3 text-start">
                        <label for="exampleFormControlTextarea1" class="form-label">
                            Descrição
                        </label>
                        <textarea class="form-control" id="exampleFormControlTextarea1" name="description" placeholder="Digite aqui" rows="3" required></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn text-light fw-bold shadow-lg mt-3" name="btn" value="ATUALIZAR"
                            style="background-color: #E26A29;">
                    </div>
                </form>
            <% }) %>
        </div>
</body>

</html>